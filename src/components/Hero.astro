import Badge from "./Badge.astro"
import SocialPill from "./SocialPill.astro"
import LinkedInIcon from "./icons/LinkedIn.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/minkaspr.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/midudev"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para empleo</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Darío Quispe
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-orange-300 [&>strong]:text-orange-500 [&>strong]:font-semibold dark:text-gray-300"
  >
  Estudiante de <strong>Ingeniería de Software</strong> de Lima, Perú 🇵🇪. Con conocimientos en el desarrollo de software y la tecnología de la información.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:miduga@gmail.com">
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/dario-quispe-mk">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
